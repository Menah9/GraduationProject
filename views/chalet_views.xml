<odoo>
  <data>
    <record id="view_gp_chalet_tree" model="ir.ui.view">
      <field name="name">gp.chalet.tree</field>
      <field name="model">gp.chalet</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="price"/>
          <field name="status"/>
        </tree>
      </field>
    </record>

    <record id="view_gp_chalet_form" model="ir.ui.view">
      <field name="name">gp.chalet.form</field>
      <field name="model">gp.chalet</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="price"/>
              <field name="status"/>
            </group>
            <group>
              <field name="description"/>
            </group>
            <notebook>
              <page string="Bookings">
                <field name="booking_ids" context="{'default_chalet_id': active_id}">
                  <tree editable="bottom">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                  </tree>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>
